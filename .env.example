# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/earthlyn?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"

# App
PORT=3000
NODE_ENV="development"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# CORS
CORS_ORIGIN="http://localhost:3001"

# Redis (for Bull Queue)
REDIS_HOST="localhost"
REDIS_PORT=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Commerce
PROCESSING_FEE_RATE=0.05
ECO_POINTS_PER_DOLLAR=1

# Auth
ALLOW_ADMIN_REGISTRATION=false

# Messaging
MESSAGE_ENCRYPTION_KEY=change-this-32-byte-key

# Fulfillment
AUTO_FULFILL=false
