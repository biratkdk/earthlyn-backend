// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ USER MANAGEMENT ============
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  passwordHash  String    @map("password_hash")
  role          UserRole
  balance       Decimal   @default(0) @db.Decimal(12, 2)
  ecoPoints     Int       @default(0) @map("eco_points")
  isActive      Boolean   @default(true) @map("is_active")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  seller         Seller?
  buyer          Buyer?
  sentMessages   Message[]   @relation("Sender")
  receivedMessages Message[] @relation("Receiver")
  transactions   Transaction[]
  adminAudits   AdminAudit[]
  moderations   MessageModeration[] @relation("UserModerations")
  disputesOpened Dispute[] @relation("DisputeOpenedBy")
  disputesAssigned Dispute[] @relation("DisputeAssignedTo")
  disputesResolved Dispute[] @relation("DisputeResolvedBy")
  referralsMade  Referral[] @relation("Referrer")
  referralsReceived Referral[] @relation("Referee")
  subscriptions  Subscription[]
  notifications Notification[]
  ecoImpacts    EcoImpact[]
  orders        Order[]

  @@map("users")
}

// ============ SELLER PROFILE ============
model Seller {
  id              String    @id @default(cuid())
  userId          String    @unique @map("user_id")
  tier            SellerTier @default(SEED)
  productsCount   Int       @default(0) @map("products_count")
  totalSales      Decimal   @default(0) @db.Decimal(12, 2) @map("total_sales")
  rating          Decimal   @default(0) @db.Decimal(3, 2)
  isVerified      Boolean   @default(false) @map("is_verified")
  kycStatus       KYCStatus @default(PENDING) @map("kyc_status")
  processingFee   Decimal   @default(0) @db.Decimal(5, 2) @map("processing_fee")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  products        Product[]
  kycDocuments    SellerKycDocument[]

  @@map("sellers")
}

// ============ BUYER PROFILE ============
model Buyer {
  id              String    @id @default(cuid())
  userId          String    @unique @map("user_id")
  preferredCategory String?
  rewardPoints    Int       @default(0) @map("reward_points")
  totalSpent      Decimal   @default(0) @db.Decimal(12, 2) @map("total_spent")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("buyers")
}

// ============ PRODUCT LISTING ============
model Product {
  id              String    @id @default(cuid())
  sellerId        String    @map("seller_id")
  name            String
  description     String    @db.Text
  category        String
  price           Decimal   @db.Decimal(10, 2)
  processingFee   Decimal   @db.Decimal(5, 2) @map("processing_fee")
  stock           Int       @default(0)
  stockStatus     StockStatus @default(IN_STOCK) @map("stock_status")
  deliveryStatus  DeliveryStatus @default(PENDING) @map("delivery_status")
  ecoScore        Int       @default(0) @map("eco_score")
  imageUrl        String?   @map("image_url")
  approvalStatus  ApprovalStatus @default(PENDING) @map("approval_status")
  approvedAt      DateTime?  @map("approved_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  seller          Seller    @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  orders          Order[]
  ecoImpacts     EcoImpact[]

  @@map("products")
}

// ============ ORDER MANAGEMENT ============
model Order {
  id                String      @id @default(cuid())
  buyerId           String      @map("buyer_id")
  productId         String      @map("product_id")
  quantity          Int
  totalAmount       Decimal     @db.Decimal(12, 2) @map("total_amount")
  paymentIntentId   String?     @map("payment_intent_id")
  paymentStatus     PaymentStatus @default(PENDING) @map("payment_status")
  status            OrderStatus @default(PENDING) @map("status")
  deliveryTrackingId String?    @map("delivery_tracking_id")
  deliveredAt       DateTime?   @map("delivered_at")
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("updated_at")

  buyer             User        @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  product           Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  ecoImpacts       EcoImpact[]
  disputes         Dispute[]
  payments         Payment[]

  @@map("orders")
  @@index([buyerId])
  @@index([productId])
}

// ============ TRANSACTIONS ============
model Transaction {
  id              String          @id @default(cuid())
  userId          String          @map("user_id")
  type            TransactionType
  amount          Decimal         @db.Decimal(12, 2)
  description     String?
  referenceType   String?         @map("reference_type")
  referenceId     String?         @map("reference_id")
  createdAt       DateTime        @default(now()) @map("created_at")

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
  @@index([userId])
  @@index([referenceId])
}

// ============ MESSAGING SYSTEM ============
model Message {
  id              String    @id @default(cuid())
  senderId        String    @map("sender_id")
  receiverId      String    @map("receiver_id")
  content         String    @db.Text
  isRead          Boolean   @default(false) @map("is_read")
  readAt          DateTime?  @map("read_at")
  createdAt       DateTime  @default(now()) @map("created_at")

  sender          User      @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver        User      @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  moderations     MessageModeration[]

  @@map("messages")
  @@index([senderId])
  @@index([receiverId])
}

// ============ ECO IMPACT TRACKING ============
model EcoImpact {
  id              String    @id @default(cuid())
  userId          String    @map("user_id")
  productId       String    @map("product_id")
  orderId         String    @map("order_id")
  pointsEarned    Int       @map("points_earned")
  impact          String    @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  product         Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  order           Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("eco_impacts")
  @@index([userId])
  @@index([productId])
  @@index([orderId])
}

// ============ ADMIN AUDIT ============
model AdminAudit {
  id          String    @id @default(cuid())
  adminId     String    @map("admin_id")
  action      String
  entityType  String    @map("entity_type")
  entityId    String?   @map("entity_id")
  metadata    Json?
  createdAt   DateTime  @default(now()) @map("created_at")

  admin       User      @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@map("admin_audits")
  @@index([adminId])
}

// ============ MESSAGE MODERATION ============
model MessageModeration {
  id          String    @id @default(cuid())
  messageId   String    @map("message_id")
  flaggedById String    @map("flagged_by_id")
  reason      String
  status      ModerationStatus @default(FLAGGED)
  resolvedAt  DateTime? @map("resolved_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  message     Message   @relation(fields: [messageId], references: [id], onDelete: Cascade)
  flaggedBy   User      @relation("UserModerations", fields: [flaggedById], references: [id], onDelete: Cascade)

  @@map("message_moderations")
  @@index([messageId])
  @@index([flaggedById])
}

// ============ DISPUTES ============
model Dispute {
  id           String        @id @default(cuid())
  orderId      String        @map("order_id")
  openedById   String        @map("opened_by_id")
  assignedToId String?       @map("assigned_to_id")
  reason       String
  status       DisputeStatus @default(OPEN)
  priority     DisputePriority @default(MEDIUM)
  dueAt        DateTime?     @map("due_at")
  resolvedAt   DateTime?     @map("resolved_at")
  resolvedById String?       @map("resolved_by_id")
  resolution   String?
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  order        Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  openedBy     User          @relation("DisputeOpenedBy", fields: [openedById], references: [id], onDelete: Cascade)
  assignedTo   User?         @relation("DisputeAssignedTo", fields: [assignedToId], references: [id], onDelete: SetNull)
  resolvedBy   User?         @relation("DisputeResolvedBy", fields: [resolvedById], references: [id], onDelete: SetNull)

  @@map("disputes")
  @@index([orderId])
  @@index([openedById])
  @@index([assignedToId])
  @@index([resolvedById])
}

// ============ REFERRALS ============
model Referral {
  id          String   @id @default(cuid())
  referrerId  String   @map("referrer_id")
  refereeId   String   @map("referee_id")
  status      String   @default("PENDING")
  createdAt   DateTime @default(now()) @map("created_at")

  referrer    User     @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referee     User     @relation("Referee", fields: [refereeId], references: [id], onDelete: Cascade)

  @@map("referrals")
  @@index([referrerId])
  @@index([refereeId])
  @@unique([referrerId, refereeId])
}

// ============ SUBSCRIPTIONS ============
model Subscription {
  id          String             @id @default(cuid())
  userId      String             @map("user_id")
  plan        String
  status      SubscriptionStatus @default(ACTIVE)
  startedAt   DateTime           @default(now()) @map("started_at")
  endsAt      DateTime?          @map("ends_at")
  createdAt   DateTime           @default(now()) @map("created_at")

  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
  @@index([userId])
}

// ============ PAYMENTS ============
model Payment {
  id              String        @id @default(cuid())
  orderId         String        @map("order_id")
  stripeIntentId  String?       @map("stripe_intent_id")
  amount          Decimal       @db.Decimal(12, 2)
  currency        String        @default("usd")
  status          PaymentStatus @default(PENDING)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  order           Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("payments")
  @@index([orderId])
  @@index([stripeIntentId])
}

// ============ KYC DOCUMENTS ============
model SellerKycDocument {
  id          String   @id @default(cuid())
  sellerId    String   @map("seller_id")
  docType     String   @map("doc_type")
  url         String
  status      String   @default("PENDING")
  uploadedAt  DateTime @default(now()) @map("uploaded_at")

  seller      Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  @@map("seller_kyc_documents")
  @@index([sellerId])
}

// ============ NOTIFICATIONS ============
model Notification {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  type      String
  message   String
  metadata  Json?
  readAt    DateTime? @map("read_at")
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
  @@index([userId])
}

// ============ ENUMS ============
enum UserRole {
  ADMIN
  SELLER
  BUYER
  CUSTOMER_SERVICE
}

enum SellerTier {
  SEED
  SPROUT
  GROWTH
  BLOOM
  EVERGREEN
  EARTH_GUARDIAN
}

enum KYCStatus {
  PENDING
  APPROVED
  REJECTED
}

enum StockStatus {
  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
}

enum DeliveryStatus {
  PENDING
  IN_TRANSIT
  DELIVERED
  FAILED
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

enum ModerationStatus {
  FLAGGED
  RESOLVED
}

enum DisputeStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  REJECTED
}

enum DisputePriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}
